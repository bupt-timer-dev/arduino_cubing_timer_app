.container {
  display: flex;
  flex-direction: row;
  margin: 5px;
}

.item {
  flex: 1;
  margin: 5px !important;
  padding: 5px;
  border-radius: 10px;

  display: flex;
  flex-direction: column;
}

.item-title {
  font-size: 60%;
  font-weight: 500;
}

.item-content {
  font-weight: 500;
}

.type-selector {
  padding: 0.5em;
  padding-bottom: 1em;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.type-selector>button {
  font-weight: normal;
  font-size: 100%;
  width: 30%;
  padding: 10px 5px;
  margin: 5px;
}