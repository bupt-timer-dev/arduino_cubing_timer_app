/* pages/record/record.wxss */
.header {
  display: flex;
  margin: 5px;
}

.list-item {
  display: flex;
  align-items: center;
  margin: 5px;
  padding: 5px;
  background-color: rgb(233, 233, 233);
  border-radius: 5px;
}

.item-time {
  flex: 1;
  font-size: 160%;
  text-align: center;
}

.tag {
  color: red;
  font-size: 1rem;
  text-align: center;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-info-upper {
  font-size: 90%;
}

.item-info-lower {
  font-size: 80%;
}