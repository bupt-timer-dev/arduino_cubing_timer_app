/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.header {
  display: flex;
  flex-direction: row;
  margin: 5px;
}

.header-item {
  flex: 1;
  margin: 5px !important;
  padding: 5px;
  border-radius: 10px;

  display: flex;
  flex-direction: column;
}

.header-item-title {
  font-size: 60%;
  font-weight: 500;
}

.header-item-content {
  font-weight: 500;
}

.main-body {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  
  top: 0px;
  bottom: 0px;
}